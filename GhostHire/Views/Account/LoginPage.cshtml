@model Authentication
@{
    ViewData["title"] = "LoginPage";
}


<head>
	<title>Login Page</title>
	<link rel="stylesheet" href="~/css/loginauthentication.css" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
	<style>
		.navbar {
			display: flex;
			align-items: center;
			justify-content: flex-start; /* Aligns items to the left */
			width: 100%;
			height: 60px;
			top: 0;
			left: 0;
			background: rgba(255, 255, 255, 0.9); /* Transparent white */
			padding: 0 20px;
			box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
			z-index: 1000;
		}

		/* Navbar Left Section (Logo + Links) */
		.nav-left {
			display: flex;
			align-items: center;
		}

		.logo img {
			height: 60px; /* Logo size increased */
			width: auto;
		}

		/* Navbar Links Container */
		.nav-links {
			display: flex;
			align-items: center;
			gap: 20px;
			list-style: none;
			padding-left: 15px;
			position: absolute; /* Using absolute positioning */
			left: 50%; /* Centers it horizontally */
			transform: translateX(-50%); /* Offset to exactly center */
			top: 50%; /* Move to the middle vertically */
			transform: translate(-50%, -50%); /* Final centering */
		}

		/* Align Logo to the left side */
		.nav-left {
			display: flex;
			align-items: center;
			justify-content: flex-start;
		}
	</style>

	<nav class="navbar">
		<div class="nav-container">
			<div class="logo">
				<a href="@Url.Action("HomePage", "Home")">
					<img src="/assets/images/GhostHireLogo.png" alt="GhostHire Logo" class="logo-img">
				</a>
			</div>

		</div>
	</nav>

	<!-- Main Content -->
	<div class="container-fluid">
		<div class="row main-content bg-success text-center">
			<div class="col-md-4 text-center company__info">
				<span class="company__logo">
					@* <img class="ghostHireLogo" src="~/assets/images/GhostHireLogo.png"/> *@
				</span>
				<h4 class="company_title">Ghost Hire</h4>
			</div>
			<div class="col-md-8 col-xs-12 col-sm-12 login_form ">
				<div class="container-fluid">
					<div class="row">
						<h2>Log In</h2>
					</div>
					<div class="row">
						<form asp-action="LoginPage" control="" class="form-group">
							<div class="row">
								<input type="text" asp-for="Username" name="username" id="username" class="form__input" placeholder="Username">
							</div>
							<div class="row">
								<div class="password-container">
									<!-- <span class="fa fa-lock"></span> -->
									<input type="password" asp-for="Password" name="password" id="password" class="form__input" placeholder="Password">
									<span id="togglePassword" class="fa fa-eye"></span>
								</div>
							</div>
							<div class="row">
								<input type="checkbox" name="remember_me" id="remember_me" class="">
								<label for="remember_me">Remember Me!</label>
							</div>
							<div class="row">
								<input type="submit" value="Submit" class="btn">
							</div>
						</form>
					</div>
					<div class="row">
						<p>Don't have an account? <a asp-action="SignUpPage">Register Here</a></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
<script>
	document.getElementById("togglePassword").addEventListener("click", function() {
		var passwordInput = document.getElementById("password");

		if(passwordInput.type === "password") {
			passwordInput.type = "text";
			this.classList.remove("fa-eye");
			this.classList.add("fa-eye-slash");
		} else {
			passwordInput.type = "password";
			this.classList.remove("fa-eye-slash");
			this.classList.add("fa-eye");
		}
	});
</script>

@{
    ViewData["Title"] = "Submission Confirmation";
}

<div class="confirmation-container">
    <h2 class="confirmation-title">Submission Confirmation</h2>
    <p class="confirmation-text">Your post has been received and is under review.<br>It will be posted shortly if approved.</p>

    <!-- Display Local GIF -->
    <img src="~/assets/images/verified.gif" alt="Verified" class="confirmation-gif">

    <a href="@Url.Action("HomePage", "Home")" class="btn-home">Back to Home</a>
</div>

<!-- Styling -->
<style>
    .confirmation-container {
        text-align: center;
        max-width: 500px;
        margin: 50px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .confirmation-title {
        font-size: 26px;
        font-weight: bold;
        color: #003366;
        margin-bottom: 15px;
    }

    .confirmation-text {
        font-size: 18px;
        color: #333;
        margin-bottom: 20px;
        line-height: 1.6;
    }

    /* Style for GIF */
    .confirmation-gif {
        width: 100px; /* Scale down */
        display: block;
        margin: 15px auto;
        border-radius: 8px;
        filter: grayscale(100%);
    }

    .btn-home {
        display: inline-block;
        padding: 12px 20px;
        font-size: 16px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background 0.3s;
    }

        .btn-home:hover {
            background-color: #0056b3;
        }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GhostHire</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/searchbar.css" />
    <link rel="stylesheet" href="~/css/backgroundswitch.css" />
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
</head>
<body>
    @RenderBody()
    @RenderSection("particle-js", required: false)
    <script src="~/js/site.js"></script>

    <script>
        const particleConfigsLight = {
             particles: {
             number: { value: 33, density: { enable: true, value_area: 800 } },
             color: { value: "#000000" },
             shape: {
                 type: "triangle",
                 stroke: { width: 0, color: "#000000" },
                 polygon: { nb_sides: 5 },
                 image: { src: "img/github.svg", width: 100, height: 100 }
             },
             opacity: {
                 value: 0.06313181133058181,
                 random: false,
                 anim: { enable: false, speed: 1, opacity_min: 0.1, sync: false }
             },
             size: {
                 value: 12,
                 random: true,
                 anim: { enable: false, speed: 40, size_min: 0.1, sync: false }
             },
             line_linked: {
                 enable: true,
                 distance: 150,
                 color: "#000000",
                 opacity: 0.24852886943415603,
                 width: 1
             },
             move: {
                 enable: true,
                 speed: 6,
                 direction: "none",
                 random: false,
                 straight: false,
                 out_mode: "out",
                 bounce: false,
                 attract: { enable: false, rotateX: 600, rotateY: 1200 }
             }
         },
         interactivity: {
             detect_on: "canvas",
             events: {
                 onhover: { enable: true, mode: "repulse" },
                 onclick: { enable: true, mode: "push" },
                 resize: true
             },
             modes: {
                 grab: { distance: 400, line_linked: { opacity: 1 } },
                 bubble: { distance: 400, size: 40, duration: 2, opacity: 8, speed: 3 },
                 repulse: { distance: 200, duration: 0.4 },
                 push: { particles_nb: 4 },
                 remove: { particles_nb: 2 }
             }
         },
         retina_detect: true
         };

        const particleConfigsDark = {
            particles: {
            number: { value: 33, density: { enable: true, value_area: 800 } },
            color: { value: "#ffffff" },
            shape: {
                type: "triangle",
                stroke: { width: 0, color: "#ffffff" },
                polygon: { nb_sides: 5 },
                image: { src: "img/github.svg", width: 100, height: 100 }
            },
            opacity: {
                value: 0.06313181133058181,
                random: false,
                anim: { enable: false, speed: 1, opacity_min: 0.1, sync: false }
            },
            size: {
                value: 12,
                random: true,
                anim: { enable: false, speed: 40, size_min: 0.1, sync: false }
            },
            line_linked: {
                enable: true,
                distance: 150,
                color: "#ffffff",
                opacity: 0.24852886943415603,
                width: 1
            },
            move: {
                enable: true,
                speed: 6,
                direction: "none",
                random: false,
                straight: false,
                out_mode: "out",
                bounce: false,
                attract: { enable: false, rotateX: 600, rotateY: 1200 }
            }
        },
        interactivity: {
            detect_on: "canvas",
            events: {
                onhover: { enable: true, mode: "repulse" },
                onclick: { enable: true, mode: "push" },
                resize: true
            },
            modes: {
                grab: { distance: 400, line_linked: { opacity: 1 } },
                bubble: { distance: 400, size: 40, duration: 2, opacity: 8, speed: 3 },
                repulse: { distance: 200, duration: 0.4 },
                push: { particles_nb: 4 },
                remove: { particles_nb: 2 }
            }
        },
        retina_detect: true
        };

        function loadParticleConfig() {
            const isLightMode = document.body.classList.contains("light-mode");
            particlesJS('particles-js', isLightMode ? particleConfigsDark : particleConfigsLight);
        }

        document.getElementById('theme-switch').addEventListener('change', function () {
            document.body.classList.toggle('light-mode');
            loadParticleConfig();
        });

        loadParticleConfig();
    </script>
</body>
</html>
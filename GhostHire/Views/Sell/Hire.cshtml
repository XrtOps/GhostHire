@model GhostHire.Models.ServiceModel

@{
    ViewData["Title"] = "Hire Service";
}

<div class="hire-container">
    <h2 class="hire-title">Confirm Your Hiring</h2>

    <div class="service-card">
        <h3>@Model.Title</h3>
        <p class="service-description">@Model.Description</p>
        <p class="service-price"><strong>Price:</strong> $@Model.Price</p>

        <form method="post" action="@Url.Action("ConfirmHire", "Sell")">
            <input type="hidden" name="serviceId" value="@Model.Id" />
            <button type="submit" class="btn-hire">Confirm Hire</button>
        </form>
    </div>
</div>

<style>
    .hire-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        text-align: center;
        font-family: Arial, sans-serif;
    }

    .hire-title {
        font-size: 28px;
        font-weight: bold;
        color: #1E3C72;
        margin-bottom: 20px;
    }

    .service-card {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
        }

    .service-description {
        font-size: 16px;
        color: #555;
        margin: 10px 0;
    }

    .service-price {
        font-size: 18px;
        font-weight: bold;
        color: #007bff;
    }

    .btn-hire {
        display: inline-block;
        padding: 12px 20px;
        font-size: 16px;
        background: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-hire:hover {
            background: #0056b3;
        }
</style>
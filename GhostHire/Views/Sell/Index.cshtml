@model List<GhostHire.Models.ServiceModel>

@{
    ViewData["Title"] = "Hire Anonymous Services";
    var selectedCategory = ViewBag.SelectedCategory as string;
}

<head>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>

<body>

    <!--  Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">
                <a href="@Url.Action("HomePage", "Home")">
                    <img src="/assets/images/GhostHireLogo.png" alt="GhostHire Logo" class="logo-img">
                </a>
            </div>

            <ul class="nav-links">
                <li><a href="@Url.Action("HomePage", "Home")">Home</a></li>
                <li><a href="@Url.Action("Sell", "Home")">Shop For Services</a></li>
                <li><a href="@Url.Action("Advertize", "Advertise")">Advertise Your Services</a></li>
                <li><a href="@Url.Action("MyDashboard", "Home")">My Dashboard</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
            </ul>
        </div>
    </nav>

    <!--  Page Content -->
    <div class="sell-container">
        <h2>Hire Anonymous Services</h2>

        <!-- Category Filter -->
        <form method="get" action="@Url.Action("Index", "Sell")" class="filter-form">
            <label for="category">Filter by Category:</label>
            <select name="category" id="category" class="category-select">
                <option value="">All Categories</option>
                <option value="Web Design">Web Design</option>
                <option value="Graphic Design">Graphic Design</option>
                <option value="Digital Marketing">Digital Marketing</option>
                <option value="Writing & Translation">Writing & Translation</option>
                <option value="Programming">Programming</option>
                <option value="SEO Services">SEO Services</option>
                <option value="App Development">App Development</option>
                <option value="Website Development">Website Development</option>
            </select>
            <button type="submit" class="filter-btn">Filter</button>
        </form>

        @if (!string.IsNullOrEmpty(selectedCategory))
        {
            <h3 class="category-header">Showing results for: <strong>@selectedCategory</strong></h3>
        }

        <!-- Service List -->
        <div class="service-list">
            @foreach (var service in Model)
            {
                <div class="service-card">
                    <h3>@service.Title</h3>
                    <p class="service-description">@service.Description</p>
                    <p class="service-price"><strong>Price:</strong> $@service.Price</p>
                    <a href="@Url.Action("Hire", "Sell", new { id = service.Id })" class="btn-hire">Hire</a>
                </div>
            }
        </div>
    </div>

    <!--  Footer -->
    <footer>
        <div class="footer-container">
            <h3>Connect with Us</h3>
            <ul class="footer-links">
                <li><a href="@Url.Action("AboutKSL", "Home")">About Us</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contact Us</a></li>
                <li><a href="@Url.Action("TermsAndConditions", "Home")">Terms And Conditions</a></li>
            </ul>
            <div class="social-icons">
                <a href="https://www.youtube.com" target="_blank"><i class="fa-brands fa-youtube"></i></a>
                <a href="https://twitter.com" target="_blank"><i class="fa-brands fa-x-twitter"></i></a>
                <a href="https://www.facebook.com" target="_blank"><i class="fa-brands fa-facebook"></i></a>
                <a href="mailto:support@ghosthire.com"><i class="fa-solid fa-envelope"></i></a>
            </div>
        </div>
    </footer>

</body>

<!-- Styling -->
<style>
    /* General Page Styling */
    .sell-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 20px;
        font-family: Arial, sans-serif;
        padding-bottom: 150px;
    }

    h2 {
        text-align: center;
        font-size: 32px;
        font-weight: bold;
        color: #1E3C72;
        margin-bottom: 20px;
    }

    /* Category Filter */
    .filter-form {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-bottom: 30px;
    }

    .category-select {
        padding: 8px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .filter-btn {
        background-color: #1E3C72;
        color: white;
        border: none;
        padding: 8px 15px;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
    }

        .filter-btn:hover {
            background-color: #007bff;
        }

    /* Service List */
    .service-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        justify-content: center;
        padding: 10px;
    }

    .service-card {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
        }

    .service-description {
        font-size: 14px;
        color: #555;
        margin: 10px 0;
    }

    .service-price {
        font-size: 16px;
        font-weight: bold;
        color: #007bff;
    }

    /* Hire Button */
    .btn-hire {
        display: inline-block;
        padding: 10px 15px;
        font-size: 16px;
        background: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-hire:hover {
            background: #0056b3;
        }

    /* Footer */

    footer {
        background: #1E3C72;
        color: white;
        padding: 20px;
        text-align: center;
        width: 100%;
        position: fixed;
        bottom: 0;
        left: 0;
        z-index: 1000; /* Keeps footer above other content */
    }


    .footer-links {
        list-style: none;
        padding: 0;
    }

        .footer-links li {
            display: inline;
            margin: 0 10px;
        }

        .footer-links a {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

    .social-icons i {
        font-size: 20px;
        margin: 10px;
        color: white;
        transition: 0.3s;
    }

        .social-icons i:hover {
            color: #FFD700;
        }
</style>

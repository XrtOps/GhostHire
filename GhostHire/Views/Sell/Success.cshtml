@{
    ViewData["Title"] = "Success";
}

<div class="success-container">
    <div class="success-box">
        <i class="fa fa-check-circle success-icon"></i>
        <h2>Thank You!</h2>
        <p>@ViewBag.Message</p>
        <a href="@Url.Action("Index", "Sell")" class="btn-back">Back to Services</a>
    </div>
</div>

<style>
    .success-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        font-family: Arial, sans-serif;
    }

    .success-box {
        text-align: center;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .success-icon {
        font-size: 50px;
        color: #28a745;
        margin-bottom: 15px;
        animation: bounce 1s ease-in-out;
    }

    @@keyframes bounce {
        0% {
            transform: scale(0.8);
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
        }
    }

    .btn-back {
        display: inline-block;
        padding: 12px 20px;
        font-size: 16px;
        background: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 15px;
        transition: 0.3s;
    }

        .btn-back:hover {
            background: #0056b3;
        }
</style>

<!-- Checkmark -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">